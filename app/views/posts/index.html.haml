- if user_signed_in?
	%p#intro
		Hello 
		= current_user.name
		%br/
		%span 
			Share your inspiration and see what is inspring others. 
- else 
	%p#intro 
		What is your muse? 
		%br/
		%span 
			Share your inspiration and see what is inspring others. 

#posts
	- @posts.each do |post|
		.post 
			.post_image 
				= link_to (image_tag post.image.url(:small)), post 
				.post_content 
					.title 
						%h2= link_to post.title, post 
					.data.clearfix
						%p.username  
							Share by 
						= post.user.name 	
					%p.buttons  
						%span 
							%i.fa.fa-comments-o
							= post.comments.count 
						%span
							%i.fa.fa-thumbs-up
							= post.get_likes.size 

= link_to "Add New Inspiration", new_post_path